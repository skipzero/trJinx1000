local tr = turtle

function preStart()
  local fuelSlot = tr.select(1)
  local currFuel = tr.getFuelLevel()
  local fuelLimit = tr.getFuelLimit()
  print(fuelSlot, currFuel)

  if currFuel < fuelLimit then
    tr.refuel()
  end
  print('turtle refueled, boss! current level is ', currFuel, ' out of ', fuelLimit )
end

preStart()
